---
import { getCollection } from 'astro:content';

const skillCategories = (await getCollection('skills'))[0].data;
---

<div class="py-4">
  <div class="grid grid-cols-[25%_75%] gap-x-4 gap-y-2">
    {skillCategories.map((item) => (
      <>
        <div class="font-bold width-64 text-gray-600 dark:text-blue-400">{item.category}</div>
        <div>{item.skills}</div>
      </>
    ))}
  </div>
</div>

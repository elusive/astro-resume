---
import { getCollection } from 'astro:content';
import SocialLinks from './SocialLinks.astro';

const personal = (await getCollection('personal'))[0].data;

const lookingForWork = personal.resume_looking_for_work === 'yes';
---

<header class="text-center py-8 px-4 text-gray-900 dark:text-white relative">
    <div class="mx-auto">
        <img class="w-[95px] mx-auto rounded-[95px] overflow-hidden" src="public/portrait.jpg" alt="John"></img>
    </div>
    <h1 class="text-4xl font-bold mb-2">{personal.resume_name}</h1>
    <div class="border-y-2 border-blue-500 pt-0 pb-6">
        <h2 class="float-left text-2xl  text-gray-600 dark:text-gray-300 py-4">{personal.resume_title}</h2>
        <SocialLinks />
    </div>
    <p class="text-lg mb-4">{personal.resume_email}</p>
    <p class="max-w-3xl mx-auto text-md leading-relaxed text-justify">
    {personal.resume_introduction}
  </p>

  {lookingForWork ? (
    <div class="mx-auto bg-green-500 text-white text-lg font-bold px-3 py-3 rounded-full">
      Actively looking for new opportunities
    </div>
  ) : (
    <div class="mx-auto my-4 bg-red-500 text-white text-lg font-bold px-3 py-3 rounded-full">
      Not currently looking for new opportunities
    </div>
  )}

</header>
